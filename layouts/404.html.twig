{% extends '_default/page.html.twig' %}

{%- block content ~%}
    <div class="intro w-full pt-16 md:pt-48 pb-10 md:pb-28 relative bg-cover overflow-hidden flex items-center">
        <div class="cloud-1 w-[160vw] h-[150vh] bg-secondary rounded-full absolute -top-[100vh] -right-[100vw] blur-3xl opacity-50"></div>
        <div class="cloud-1 w-[140vw] h-[140vh] bg-secondary rounded-full absolute -left-[85vw] -bottom-[80vh] blur-3xl opacity-50"></div>
        <div class="container container-md mx-auto px-6">
            <div class="flex flex-col md:flex-row gap-16 items-center">
                <div class="md:basis-1/2 lg:basis-3/5 flex flex-col gap-1 md:gap-2 lg:gap-6">
                    <h1>{{ page.title }}</h1>
                    <p class="text-gris">{{ page.content }}</p>
                </div>

                    <div class="md:basis-1/2 lg:basis-2/5 lighten">
                        {{ asset('pages/404.jpg')|html({alt: page.title}) }}
                    </div>

            </div>
        </div>
    </div>
{%- endblock ~%}